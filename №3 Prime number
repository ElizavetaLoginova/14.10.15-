#include <iostream>
using namespace std;
int main()
{
	while (true)
	{
		int n;
		int i = 0, k = 0, m = 0;

		cout << "Enter the n: ";
		cin >> n;
		
		for (int i = 2; i < n; i++)
		{
			if (n % i == 0)
				k++;
		}
		if (k > 0)
			cout << "Number " << n << " is not a prime number" << endl;
		else
			cout << "Number " << n << " is a prime number" << endl;
		system("pause");
		system("cls");
	}
	return 0;
	}
