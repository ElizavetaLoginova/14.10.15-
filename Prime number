#include <iostream>
using namespace std;
int main()
{
	while (true)
	{
		int n, a, i;
		cout << "Enter number:" << endl;
		cin >> n;
		for (i = 2, a = 0; i < n; i++)
		if (!(n % i))
			a = 1;
		if (!a)
			cout << "The number " << n << " is prime" << endl;
		else
			cout << "The number " << n << " is NOT prime" << endl;

		system("pause");
	}
	return 0;
}
